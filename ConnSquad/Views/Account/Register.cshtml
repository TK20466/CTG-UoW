<script type="text/html" id="register">
    <div class="panel panel-default">
        <div class="panel-heading">Register</div>
        <div class="panel-body">
            <form data-bind="submit: register, with: registrationModel()">
                <div class="form-group" data-bind="validationElement: email">
                    <label>Email address</label>
                    <input type="email" class="form-control" placeholder="Email" data-bind="value: email, valueUpdate: 'input'">
                </div>
                <div class="form-group" data-bind="validationElement: firstName">
                    <label>First name</label>
                    <input type="text" class="form-control" placeholder="First Name" data-bind="value: firstName, valueUpdate: 'input'">
                </div>
                <div class="form-group" data-bind="validationElement: lastName">
                    <label>Last name</label>
                    <input type="text" class="form-control" placeholder="Last Name" data-bind="value: lastName, valueUpdate: 'input'">
                </div>
                <div class="form-group" data-bind="validationElement: legionId">
                    <label>Legion ID</label>
                    <input type="text" class="form-control" placeholder="Legion ID without prefix" data-bind="value: legionId, valueUpdate: 'input'">
                </div>
                <div class="form-group" data-bind="validationElement: forumHandle">
                    <label>Forum Handle</label>
                    <input type="text" class="form-control" placeholder="Name on CTG Forum" data-bind="value: forumHandle, valueUpdate: 'input'">
                </div>
                <div class="form-group" data-bind="validationElement: userName">
                    <label>Username</label>
                    <input type="text" class="form-control" placeholder="Username" data-bind="value: userName, valueUpdate: 'input'">
                </div>
                <div class="form-group" data-bind="validationElement: password">
                    <label>Password</label>
                    <input type="password" class="form-control" placeholder="Password" data-bind="value: password, valueUpdate: 'input'">
                </div>
                <div class="form-group" data-bind="validationElement: password2">
                    <label>Confirm Password</label>
                    <input type="password" class="form-control" placeholder="Confirm Password" data-bind="value: password2, valueUpdate: 'input'">
                </div>
                <button type="submit" data-bind="enable: $parent.registrationModel.isValid" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</script>


<script type="text/html" id="registration-complete">
    <div class="panel panel-success">
        <div class="panel-heading">Registration Complete</div>
        <div class="panel-body">
            Thank you for registering!  A validation email has been sent to your email address.  Please check your inbox for instructions on how to verify your registration.
        </div>
    </div>
</script>