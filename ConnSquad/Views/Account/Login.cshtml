<script type="text/html" id="login">
    <div class="panel panel-default">
        <div class="panel-heading">Log In To Event Tracker</div>
        <div class="panel-body">
            <div data-bind="visible: wrongDetails" class="alert alert-danger" role="alert">Invalid Username or Password</div>
            <form data-bind="submit: login, with: loginModel()">
                <div class="form-group" data-bind="validationElement: userName">
                    <label>Username</label>
                    <input type="text" class="form-control" placeholder="Username" data-bind="value: userName, valueUpdate: 'input'">
                </div>
                <div class="form-group" data-bind="validationElement: password">
                    <label>Password</label>
                    <input type="password" class="form-control" placeholder="Password" data-bind="value: password, valueUpdate: 'input'">
                </div>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" data-bind="checked: rememberMe"> Remember Me
                    </label>
                </div>
                <button type="submit" data-bind="enable: $parent.loginModel.isValid" class="btn btn-primary">Log me in!</button>
            </form>
        </div>
    </div>
</script>